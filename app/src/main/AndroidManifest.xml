<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chamee.star">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newuser"
            android:label="@string/title_activity_newuser"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Create"
            android:label="@string/title_activity_create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Contact"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyAccount"
            android:label="@string/title_activity_my_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactDetails"
            android:label="@string/title_activity_contact_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyHeartRate"
            android:label="@string/title_activity_my_heart_rate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HeartRate"
            android:label="@string/title_activity_heart_rate"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
